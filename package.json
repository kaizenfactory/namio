{
  "name": "namio",
  "version": "0.0.3",
  "type": "module",
  "description": "Brandable name generator + .com checker (Attio-inspired)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaizenfactory/namio.git"
  },
  "bugs": {
    "url": "https://github.com/kaizenfactory/namio/issues"
  },
  "homepage": "https://github.com/kaizenfactory/namio#readme",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "namio": "dist/namio.js"
  },
  "files": [
    "src",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run src/cli.ts",
    "generate": "bun run src/cli.ts generate",
    "check": "bun run src/cli.ts check",
    "hunt": "bun run src/cli.ts hunt",
    "build": "bun build src/cli.ts --target=node --outfile dist/namio.js && node scripts/add-shebang.mjs dist/namio.js",
    "prepack": "bun run build",
    "compile": "bun build --compile src/cli.ts --outfile dist/namio",
    "release": "standard-version",
    "release:dry": "standard-version --dry-run"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "standard-version": "^9.5.0",
    "typescript": "^5.6.3"
  }
}
